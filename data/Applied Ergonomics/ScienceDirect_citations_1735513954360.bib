url = {https://www.sciencedirect.com/science/article/pii/S0003687021002908},
author = {Brandon J. King and Gemma J.M. Read and Paul M. Salmon},
keywords = {Ecological interface design (EID), Work domain analysis (WDA), Risk management, Data visualisation},
abstract = {Ecological Interface Design (EID) is a framework for developing dynamic interfaces that support operators to understand and take appropriate actions within highly-complex systems. This two-part study involved the development and evaluation of a novel EID-based static aviation risk management display. A within-subjects survey-based experiment employed measures of decision accuracy, situation awareness, user workload, usability, and user perceptions. Results from 23 participants showed that when compared to a risk interface utilised by a large aviation company, the EID display achieved higher usability and lower workload ratings with large effect sizes, with no differences in decision accuracy and situation awareness. The findings provide evidence that the EID framework can improve upon static traditional displays. Research contributions also include a novel model of an aviation ground operations system and an example application of EID to the development of a static display. Further research is necessary to identify the extent of the applications and benefits to static displays.}
}
@article{VALENTIN2022103603,
